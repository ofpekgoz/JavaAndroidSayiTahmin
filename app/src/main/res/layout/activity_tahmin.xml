<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TahminActivity">

    <TextView
        android:id="@+id/txtKalanHak"
        android:layout_width="183dp"
        android:layout_height="67dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="Kalan Hakkınız:5"
        android:textColor="@color/colorRed"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtArtirAzalt"
        android:layout_width="148dp"
        android:layout_height="43dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtKalanHak" />

    <EditText
        android:id="@+id/txtSayiGiriniz"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Sayı Giriniz..."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtArtirAzalt" />

    <Button
        android:id="@+id/btnTahminEt"
        android:layout_width="183dp"
        android:layout_height="73dp"
        android:layout_marginTop="111dp"
        android:background="@color/colorPrimaryDark"
        android:text="Tahimn Et"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSayiGiriniz" />
</androidx.constraintlayout.widget.ConstraintLayout>